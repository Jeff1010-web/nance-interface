{
  "extends": [
    "next/core-web-vitals",
    "plugin:storybook/recommended"
  ],
  "rules": {
    "brace-style": [
      "warn",
      "1tbs"
    ],
    "indent": [
      "warn",
      2
    ],
    "semi": [
      "warn",
      "always",
      {
        "omitLastInOneLineBlock": true
      }
    ],
    "max-lines": [
      "warn",
      300
    ],
    "react-hooks/exhaustive-deps": "off"
  }
}
